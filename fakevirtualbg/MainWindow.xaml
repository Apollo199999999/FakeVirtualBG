<Window x:Class="fakevirtualbg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fakevirtualbg"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="label" Content="Step 1: Choose a video of yourself" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="OpenVideoBtn" Content="Select Video" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="152" Height="28" Click="OpenVideoBtn_Click" />
        <TextBlock x:Name="filepathText" HorizontalAlignment="Left" Margin="167,47,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
